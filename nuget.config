<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Private NuGet feed -->
    <add key="PrivateFeed" value="https://nuget.pkg.github.com/sl-cloud/index.json" />
    <!-- Public NuGet.org as fallback -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  
  <!-- 
    Credentials Configuration:
    
    For CI/CD:
      Use the api-key parameter in 'dotnet nuget push' command (already configured in publish.yml)
    
    For Local Development:
      Authenticate once using the dotnet CLI:
      
      dotnet nuget add source https://nuget.pkg.github.com/sl-cloud/index.json
        with name PrivateFeed, username YOUR_GITHUB_USERNAME, password YOUR_GITHUB_TOKEN
        and store-password-in-clear-text option
      
      Or on Windows with credential manager:
      
      dotnet nuget add source https://nuget.pkg.github.com/sl-cloud/index.json
        with name PrivateFeed, username YOUR_GITHUB_USERNAME, and password YOUR_GITHUB_TOKEN
    
    Note: Do not store credentials directly in this file for cross-platform compatibility.
  -->
</configuration>
